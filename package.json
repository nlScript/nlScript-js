{
  "name": "@nlscript/nlScript-js",
  "version": "0.1.0",
  "description": "Typescript/Javascript implementation of nlScript",
  "main": "dist/index.cjs",
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js"
  },
  "types": "dist/types/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:esm": "npx tsc -p tsconfig-esm.json && echo {\"type\": \"module\"} > dist/esm/package.json",
    "build:cjs": "npx tsc -p tsconfig-cjs.json && echo {\"type\": \"commonjs\"} > dist/cjs/package.json",
    "build:types": "npx tsc -p tsconfig-types.json",
    "build:umd": "npx webpack -c webpack-umd.config.js",
    "build": "npm run build:esm && npm run build:cjs && npm run build:types && npm run build:umd"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nlScript/nlScript-js.git"
  },
  "keywords": [
    "natural language",
    "scripting",
    "user interface"
  ],
  "author": "Benjamin Schmid",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nlScript/nlScript-js/issues"
  },
  "homepage": "https://github.com/nlScript/nlScript-js#readme",
  "dependencies": {
    "codemirror": "^6.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "tsc": "^2.0.4",
    "typescript": "^5.5.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "files": [
    "README.md",
    "package.json",
    "./dist/",
    "./src/"
  ]
}
